@model MyFirstMVCApp.ViewModels.CarViewModel


<div>
    <h2>Form Model</h2>
    <form asp-action="Create" method="post">
        <div>
            <label asp-for="ModelName"></label><br/>
            <input asp-for="ModelName" /><br/>
            <span asp-validation-for="ModelName" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ManufacturerId"> Manufacturer </label><br/>
            <select asp-for="ManufacturerId" id="ManufacturerId" name="ManufacturerId">
                <option value="">Select Manufacturer</option>
                @foreach (var manufacturer in ViewData["Manufacturers"] 
                              as List<MyFirstMVCApp.Entities.ManufacturerEntity>)
                {
                    <option value="@manufacturer.Id">@manufacturer.Name</option>
                }

            </select><br/>
            <span asp-validation-for="ManufacturerId" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Year"></label><br/>
            <input asp-for="Year" /><br/>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="ColorIds"></label><br/>
            <select asp-for="ColorIds"  multiple>
                @foreach (var color in ViewData["Colors"] as List<MyFirstMVCApp.Entities.CarColorEntity>)
                {
                    <option value="@color.Id">@color.ColorName</option>
                }
            </select>
            <span asp-validation-for="ColorIds" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Price"></label><br/>
            <input asp-for="Price" /><br/>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <button type="submit">Send</button>
    </form>
</div>
